<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMAUIGallery.Views.Styles.StaticDinamicResource"
             Title="StaticDinamicResource">
    <ContentPage.Resources>
        <Color x:Key="TitleColor">#FF0000</Color>
    </ContentPage.Resources>
    
    <VerticalStackLayout Padding="20">
        <Label Text="Welcome to .NET MAUI!" TextColor="{StaticResource TitleColor}" FontSize="24" Padding="20"/>
        <Label Text="Paragrafo" Style="{DynamicResource LabelStyle}" TextColor="{DynamicResource TitleColor}" FontSize="12"/>
        <Button Text="Alterar" Clicked="Button_Clicked"/>
    </VerticalStackLayout>
</ContentPage>