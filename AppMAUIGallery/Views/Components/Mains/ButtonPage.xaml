<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppMAUIGallery.Views.Components.Mains.ButtonPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="ButtonPage">
    <VerticalStackLayout>
        <Button
            x:Name="mainBtn"
            BackgroundColor="White"
            BorderColor="Red"
            BorderWidth="2"
            CornerRadius="22"
            HorizontalOptions="Center"
            Pressed="Button_Pressed"
            Released="Button_Released"
            Text="Clique-me"
            TextColor="Black" />
    </VerticalStackLayout>
</ContentPage>