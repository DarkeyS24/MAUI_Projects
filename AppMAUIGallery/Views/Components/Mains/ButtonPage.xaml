<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppMAUIGallery.Views.Components.Mains.ButtonPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="ButtonPage">
    <VerticalStackLayout>
        <Button
            x:Name="mainBtn"
            BackgroundColor="White"
            BorderColor="LightBlue"
            BorderWidth="2"
            Clicked="Button_Clicked"
            CornerRadius="22"
            FontAttributes="Bold"
            HorizontalOptions="Center"
            Pressed="Button_Pressed"
            Released="Button_Released"
            Text="Clique-me"
            TextColor="Black" 
            ImageSource="dotnet_bot.png"
            HeightRequest="60"
            WidthRequest="180"
            ContentLayout="left,0"/>

        <Frame
            Margin="20"
            BackgroundColor="#FFADD8E6"
            CornerRadius="20"
            HeightRequest="300"
            HorizontalOptions="Center"
            WidthRequest="350">
            <ScrollView>
                <VerticalStackLayout>
                    <Label
                        x:Name="lblLog"
                        Padding="20,10,20,10"
                        FontAttributes="Bold" />
                </VerticalStackLayout>
            </ScrollView>
        </Frame>



    </VerticalStackLayout>
</ContentPage>