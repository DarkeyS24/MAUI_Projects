<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppMAUIGallery.Views.Components.Forms.PickerPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="PickerPage">
    <VerticalStackLayout Padding="10">
        <Picker
            Title="Marcas"
            HorizontalOptions="Start"
            SelectedIndexChanged="Picker_SelectedIndexChanged"
            TitleColor="Black"
            WidthRequest="200">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Fiat</x:String>
                    <x:String>Volkswagen</x:String>
                    <x:String>Chevrolet</x:String>
                    <x:String>Renault</x:String>
                    <x:String>Peugeot</x:String>
                    <x:String>Audi</x:String>
                    <x:String>Ford</x:String>
                    <x:String>Jeep</x:String>
                    <x:String>Dodge</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>

        <Label x:Name="lblItem" Margin="0,10,0,0" />
    </VerticalStackLayout>
</ContentPage>