<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppMAUIGallery.Views.Visuals.ShadowPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="ShadowPage">
    <VerticalStackLayout Padding="10">
        <Border Padding="10" BackgroundColor="White" Stroke="Blue">
            <Border.Shadow>
                <Shadow Radius="5" Brush="Blue" Opacity="1" Offset="5,5"/>
            </Border.Shadow>
            <VerticalStackLayout>
                <Label
                    HorizontalOptions="Center"
                    Text="Welcome to .NET MAUI!"
                    VerticalOptions="Center" />
            </VerticalStackLayout>
        </Border>
    </VerticalStackLayout>
</ContentPage>